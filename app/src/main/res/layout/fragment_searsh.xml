<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/textChedule2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/edit_text_bg"
            android:ems="10"
            android:fontFamily="@font/inter_regular"
            android:gravity="start|top"
            android:hint="Поиск"
            android:inputType="textPersonName"
            android:maxLength="48"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/base_black"
            android:textColorHighlight="@color/base_shady2"
            android:textColorHint="@color/base_shady2"
            android:textColorLink="@color/base_yellow"
            android:textCursorDrawable="@drawable/yellow_cursor"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/searching_icon"
            app:layout_constraintBottom_toBottomOf="@+id/textChedule2"
            app:layout_constraintEnd_toEndOf="@+id/textChedule2"
            app:layout_constraintTop_toTopOf="@+id/textChedule2" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/base_shady3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textChedule2" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider4">

            <Button
                android:id="@+id/mondayBtn"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/calendar_inactive_button"
                android:elevation="8dp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/monday"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/base_black"
                android:textSize="14sp"
                android:typeface="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/tuesdayBtn"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/calendar_inactive_button"
                android:fontFamily="@font/inter_regular"
                android:shadowColor="#000"


                android:shadowDx="1"
                android:shadowDy="1"
                android:text="@string/tuesday"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/base_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mondayBtn"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/wednesdayBth"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/calendar_inactive_button"
                android:fontFamily="@font/inter_regular"
                android:shadowColor="#000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:text="@string/wednesday"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/base_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tuesdayBtn"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/thursdayBtn"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/calendar_inactive_button"
                android:fontFamily="@font/inter_regular"
                android:shadowColor="#000"


                android:shadowDx="1"
                android:shadowDy="1"
                android:text="@string/thursday"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/base_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/wednesdayBth"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/fridayBtn"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/calendar_inactive_button"
                android:fontFamily="@font/inter_regular"
                android:shadowColor="#000"


                android:shadowDx="1"
                android:shadowDy="1"
                android:text="@string/friday"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/base_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/thursdayBtn"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/saturdayBtn"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/calendar_inactive_button"
                android:fontFamily="@font/inter_regular"
                android:shadowColor="#000"


                android:shadowDx="1"
                android:shadowDy="1"
                android:text="@string/saturday"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/base_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fridayBtn"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/sundayBtn"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/calendar_inactive_button"
                android:fontFamily="@font/inter_regular"


                android:shadowColor="#000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:text="@string/sunday"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/base_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/saturdayBtn"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
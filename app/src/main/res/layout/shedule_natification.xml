<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="28dp"
    android:layout_marginEnd="28dp"
    android:layout_marginBottom="10dp"
    android:background="@color/base_white_glass"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@color/base_white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconNatification"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:background="@mipmap/icon_apolo_foreground" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/inter_regular"
            android:text="Clay"
            android:textColor="@color/base_black" />
    </LinearLayout>

    <TextView
        android:id="@+id/headerNatification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_white"
        android:fontFamily="@font/inter_regular"
        android:text="TextView"
        android:textColor="@color/base_black"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="216dp">

        <ImageView
            android:id="@+id/ImageScheduleNatification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:visibility="visible"
            app:srcCompat="@android:drawable/sym_def_app_icon"
            tools:srcCompat="@color/base_shady1"
            tools:visibility="visible" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonNatiComplete"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="50"
            android:background="@color/base_white"
            android:fontFamily="@font/inter_regular"
            android:text="Выполнить"
            android:textAlignment="viewStart"
            android:textColor="@color/base_black" />

        <Button
            android:id="@+id/buttonNatiCancel"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="50"
            android:background="@color/base_white"
            android:fontFamily="@font/inter_regular"
            android:text="Отменить "
            android:textAlignment="textEnd"
            android:textColor="@color/base_black" />
    </LinearLayout>

</LinearLayout>